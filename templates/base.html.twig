{% set admin = false %}
{% if app.user and 'ROLE_ADMIN' in app.user.roles %}
    {% set admin = true %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {{
        render(
            controller('App\\Controller\\BarController:mainMenu',
                {
                    'routeName' : app.request.attributes.get('_route')
                }
            )
        )
    }}
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>